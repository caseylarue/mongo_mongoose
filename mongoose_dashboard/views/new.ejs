<html>
<head>
	<title>Add New Mongoose</title>
	<style type="text/css">
		label, input, textarea, button {
			display: block;
			margin: 20px;
		}
		textarea {
			width: 400px;
			height: 100px;
		}
	</style>
</head>
<body>
	<h1>Add New Mongoose</h1>
	<% if(typeof(errors) != 'undefined' ) { %>
    	<% for (var x in errors) { %>
    	<h3><%= errors[x].message %></h3>
    		<% } %>
 	<% } %>
	<form action='/new' method='post'>
		<label>Name:</label>
		<input name='name' placeholder='name your Mongoose'>
		<label>Description:</label>
		<textarea name='description'></textarea>
		<button type='submit'>Submit</button>
	</form>
</body>
</html>